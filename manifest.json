{
  "manifest_version": 3,
  "name": "Velog Stats",
  "version": "1.7",
  "description": "Velog의 총 조회수 등의 통계를 제공합니다.",
  "permissions": ["cookies"],
  "host_permissions": ["https://v2.velog.io/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  }
}
